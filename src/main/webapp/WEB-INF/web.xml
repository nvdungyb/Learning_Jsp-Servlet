<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <welcome-file-list>index.jsp</welcome-file-list>
    
    <listener>
        <listener-class>servlet.listener.ContextListener</listener-class>
    </listener>

    <context-param>
        <param-name>driver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>schema</param-name>
        <param-value>jdbc:mysql://</param-value>
    </context-param>
    <context-param>
        <param-name>host</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>port</param-name>
        <param-value>3306</param-value>
    </context-param>
    <context-param>
        <param-name>databaseName</param-name>
        <param-value>btl_web</param-value>
    </context-param>


    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.Login</servlet-class>
        <init-param>
            <param-name>adminName</param-name>
            <param-value>nvdungyb</param-value>
        </init-param>
        <init-param>
            <param-name>adminPassword</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>adminEmail</param-name>
            <param-value>nguyenvandungk49a1@gmail.com</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/checkLogin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletContextParam</servlet-name>
        <servlet-class>controller.ServletContextParam</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletContextParam</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SessionScope</servlet-name>
        <servlet-class>controller.SessionScope</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionScope</servlet-name>
        <url-pattern>/session</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Request</servlet-name>
        <servlet-class>controller.ResponseHeader</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Request</servlet-name>
        <url-pattern>/response</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BinaryStream</servlet-name>
        <servlet-class>controller.BinaryStream</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BinaryStream</servlet-name>
        <url-pattern>/binary</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>forward1</servlet-name>
        <servlet-class>request.dispatcher.Forward1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>forward1</servlet-name>
        <url-pattern>/forward1</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>forward2</servlet-name>
        <servlet-class>request.dispatcher.Forward2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>forward2</servlet-name>
        <url-pattern>/forward2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>include1</servlet-name>
        <servlet-class>request.dispatcher.Include1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>include1</servlet-name>
        <url-pattern>/include1</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>include2</servlet-name>
        <servlet-class>request.dispatcher.Include2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>include2</servlet-name>
        <url-pattern>/include2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sendRedirect</servlet-name>
        <servlet-class>response.redirection.SendRedirect</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sendRedirect</servlet-name>
        <url-pattern>/redirect</url-pattern>
    </servlet-mapping>
</web-app>


